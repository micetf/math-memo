{
    "source": {
        "include": ["./src"],
        "includePattern": ".+\\.jsx?$"
    },
    "opts": {
        "destination": "./docs",
        "recurse": true,
        "readme": "./README.md"
    },
    "plugins": ["plugins/markdown"],
    "templates": {
        "cleverLinks": true,
        "monospaceLinks": true
    },
    "markdown": {
        "parser": "gfm",
        "hardwrap": true
    }
}
